   image("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTw3mTaJ35prfHAdceZy94IxbptZ-TWsxVzTQ&s", 0,0, 320,320);
  fill(255,255,255);
  text("Hecho por: Alejandro", 113,218);
  
  fill(255,255,255);
  rect(0,0,150,40);
  fill(0,0,0);
  text("Volver",50,30);
 	if (mouseX>=0 && mouseX<=0+150 && mouseY>=0 && mouseY<=0+40);
